<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yyx.androidtestdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activityDemo.ActivityLanucherDemo"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_activity_lanucher_demo"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.yyx.mineActivity" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="media/3gpp" />
                <data android:scheme="file" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activityDemo.MaterialDesignActivity"
            android:label="@string/title_activity_material_design"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".recyclerview.RecyclerViewActivity"
            android:label="@string/title_activity_recycler_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
